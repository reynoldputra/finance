{
  "include": [
    "**/*",
    "../api.d.ts"
  ],
  "exclude": [
    "../../node_modules"
  ],
  "compilerOptions": {
    "types" : ["node", "jest"],
    "target": "es2018",
    "module": "commonjs",
    "outDir": "../../dist/server",
    "strict": true,
    "esModuleInterop": true,
    "inlineSources": false,
    "sourceMap": false,
    "removeComments": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "paths": {
      "@server/*": ["./*"]
    }
  },
  "references": [{
    "path": "../../tsconfig.node.json"
  }]
}
